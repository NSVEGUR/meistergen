// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       Int    @id @default(autoincrement())
  uid      String @unique
  email    String @unique
  password String
  role Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  services UserService[]
}
model Service {
  id Int @id @default(autoincrement())
  uid String @unique
  name String
  type String
  price Int
  description String
  users UserService[]
}
model File{
  id Int @id @default(autoincrement())
  uid String @unique
  name String
  mimetype String
  size Int
  authorId Int
  author UserService @relation(fields: [authorId], references: [id])
}
model UserService{
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  serviceId Int
  service Service @relation(fields: [serviceId], references: [id])
  accepted Boolean @default(false)
  acceptedBy String?
  files File[]
}

enum Role {
  USER
  EMPLOYEE
  ADMIN
}